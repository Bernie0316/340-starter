<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<% if (messages.error) { %>
  <p class="error"><%= messages.error %></p>
<% } %>

<form id="addInventoryForm" action="/inv/add-inventory" method="post" novalidate>
    <fieldset class="addInventoryFormFieldset">
      <label for="classification_id">Classification</label>
      <!-- controller 要傳入 classificationSelect（HTML） -->
      <div class="select-wrap">
        <%- classificationSelect %>
      </div>

      <label for="make">Make</label>
      <input id="make" name="make" type="text" required
             value="<%= typeof make !== 'undefined' ? make : '' %>">

      <label for="model">Model</label>
      <input id="model" name="model" type="text" required
             value="<%= typeof model !== 'undefined' ? model : '' %>">

      <label for="description">Description</label>
      <textarea id="description" name="description" rows="4" required><%= typeof description !== 'undefined' ? description : '' %></textarea>

      <label for="image">Image Path</label>
      <input id="image" name="image" type="text" required
            value="<%= typeof image !== 'undefined' ? image : '' %>"
            placeholder="/images/vehicles/your-image.jpg">

      <label for="thumbnail">Thumbnail Path</label>
      <input id="thumbnail" name="thumbnail" type="text" required
            value="<%= typeof thumbnail !== 'undefined' ? thumbnail : '' %>"
            placeholder="/images/vehicles/your-thumb.jpg">
      
      <label for="price">Price</label>
      <input id="price" name="price" type="number" step="0.01" min="0" required
        value="<%= typeof price !== 'undefined' ? price : '' %>">
      <label for="year">Year</label>
      <input id="year" name="year" type="number" required
        min="1900" max="<%= new Date().getFullYear() + 1 %>"
        value="<%= typeof year !== 'undefined' ? year : '' %>">


      <label for="miles">Miles</label>
      <input id="miles" name="miles" type="number" step="1" min="0" required
             value="<%= typeof miles !== 'undefined' ? miles : '' %>">

      <label for="color">Color</label>
      <input id="color" name="color" type="text" required
             value="<%= typeof color !== 'undefined' ? color : '' %>">
    </fieldset>

    <div class="form-actions">
      <button type="submit">Add Vehicle</button>
    </div>
  </form>